{
	"name": "mediawiki/oojsplus",
	"type": "mediawiki-extension",
	"description": "Provides Widgets and utility functions for OOJS",
	"keywords": [
		"mediawiki",
		"wiki"
	],
	"license": "GPL-3.0-only",
	"homepage": "https://en.wiki.bluespice.com/wiki/Reference:OOJSPlus",
	"authors": [
		{
			"name": "Hallo Welt! GmbH",
			"email": "info@hallowelt.com",
			"homepage": "https://www.hallowelt.com"
		}
	],
	"extra": {
		"installer-name": "OOJSPlus"
	},
	"require": {
		"composer/installers": "~1.0|~2",
		"mwstake/mediawiki-component-formengine": "~2",
		"mwstake/mediawiki-component-utils": "~2",
		"mwstake/mediawiki-component-commonwebapis": "~1"
	},
	"require-dev": {
		"mediawiki/mediawiki-codesniffer": "39.0.0",
		"mediawiki/minus-x": "1.1.1",
		"php-parallel-lint/php-console-highlighter": "1.0.0",
		"php-parallel-lint/php-parallel-lint": "1.3.2"
	},
	"scripts": {
		"test": [
			"parallel-lint . --exclude vendor --exclude node_modules",
			"minus-x check .",
			"@phpcs"
		],
		"fix": [
			"minus-x fix .",
			"phpcbf"
		],
		"phpcs": "phpcs -sp"
	},
	"config": {
		"allow-plugins": {
			"composer/installers": true
		}
	}
}
